<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(submission) -%>">
  <span class='title'>
    <%= submission.first_name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), submission_path(submission),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_submission_path(submission),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_submission_path(submission),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => submission.first_name),
        :method => :delete %>
  </span>
</li>
